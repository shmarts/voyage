{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    "noUnusedLocals": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "baseUrl": "./",
    "paths": {
      "@voyage/types": ["../types/src"],
      "@/*": [
        "./src/*"
      ]
    },
    "types": ["chrome", "vite/client"]
  },
  "include": [
    "src/**/*.ts",
    "*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ]
}